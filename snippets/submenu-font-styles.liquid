{%- comment -%}
  Derives CSS variables from the menu typography settings for 2nd and 3rd level menu items.
  Accepts:
     settings: {block.settings}
{%- endcomment -%}

--menu-parent-font-family: var(--font-{{ settings.type_font_secondary_link }}--family); 
--menu-parent-font-style: var(--font-{{- settings.type_font_secondary_link -}}--style);
--menu-parent-font-weight: var(--font-{{- settings.type_font_secondary_link -}}--weight);
--menu-parent-font-case: {% if settings.type_case_secondary_link == 'uppercase' %}uppercase{% else %}none{% endif %};
--menu-parent-font-size: {{ settings.type_font_secondary_size }};
--menu-parent-font-line-height: normal;
--menu-parent-font-color: var(--color-foreground);
--menu-parent-active-font-color: rgb(var(--color-foreground-rgb) / var(--opacity-subdued-text));
--menu-child-font-family: var(--font-{{ settings.type_font_tertiary_link }}--family);
--menu-child-font-style: var(--font-{{- settings.type_font_tertiary_link -}}--style);
--menu-child-font-weight: var(--font-{{- settings.type_font_tertiary_link -}}--weight);
--menu-child-font-case: {% if settings.type_case_secondary_link == 'uppercase' %}uppercase{% else %}none{% endif %};
--menu-child-font-size: {{ settings.type_font_tertiary_size }};
--menu-child-font-line-height: normal;
--menu-child-font-color: rgb(var(--color-foreground-rgb) / var(--opacity-subdued-text));
--menu-child-active-font-color: var(--color-foreground);